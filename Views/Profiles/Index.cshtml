@model IEnumerable<MyProject.Models.Profile>

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Raleway:wght@300;400;600&display=swap" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Raleway', sans-serif;
            background: linear-gradient(135deg, #f3f4f6, #3498db);
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1 {
            font-family: 'Playfair Display', serif;
            font-size: 3.5rem;
            color: #2c3e50;
            text-align: center;
            margin: 2rem 0;
            text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.2);
            animation: fadeInDown 1s;
        }

        .profile-container {
            background: #fff;
            padding: 2rem;
            margin: 2rem 0;
            border-radius: 12px;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .profile-container:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.2);
        }

        .profile-name {
            font-size: 2rem;
            color: #34495e;
            margin-bottom: 0.5rem;
        }

        .profile-name span {
            color: #e74c3c;
            font-weight: bold;
        }

        .profile-details {
            font-size: 1.2rem;
            margin: 1rem 0;
            line-height: 1.6;
        }

        .profile-details strong {
            color: #2980b9;
        }

        .btn {
            border-radius: 50px;
            padding: 0.8rem 1.5rem;
            font-size: 1rem;
            font-weight: bold;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
        }

        .btn-warning {
            background: #f39c12;
            color: #fff;
        }

        .btn-info {
            background: #3498db;
            color: #fff;
        }

        .btn-danger {
            background: #e74c3c;
            color: #fff;
        }

        .btn-primary {
            background: #2ecc71;
            color: #fff;
        }

        .btn:hover {
            transform: scale(1.1);
            opacity: 0.9;
        }

        .social-icons {
            margin-top: 1.5rem;
            display: flex;
            gap: 1rem;
        }

        .social-icons a {
            font-size: 2rem;
            color: #34495e;
            transition: transform 0.3s, color 0.3s;
        }

        .social-icons a:hover {
            color: #e74c3c;
            transform: rotate(360deg);
        }

        .profile-description {
            margin-top: 1.5rem;
            font-size: 1.2rem;
            line-height: 1.8;
        }

      
        
    </style>
</head>

<div class="container">
    <h1 class="animate__animated animate__fadeInDown">Profile</h1>

    @foreach (var item in Model)
    {
        <div class="profile-container animate__animated animate__zoomIn">
            <div class="profile-name">
                @Html.DisplayFor(modelItem => item.Name) <span>@Html.DisplayFor(modelItem => item.LName)</span>
            </div>

            <div class="profile-details">
                <p><strong><i class="bi bi-telephone-inbound"></i> Phone:</strong> @Html.DisplayFor(modelItem => item.PhoneNumber)</p>
                <p><strong><i class="bi bi-envelope"></i> Email:</strong> @Html.DisplayFor(modelItem => item.Email)</p>
                <p><strong><i class="bi bi-geo-alt"></i> Location:</strong> @Html.DisplayFor(modelItem => item.Country) - @Html.DisplayFor(modelItem => item.City)</p>
            </div>

            <div class="profile-description">
                <strong>Professional Summary:</strong><br />
                @Html.DisplayFor(modelItem => item.Description)
            </div>

            <div class="social-icons">
                <a href="https://www.linkedin.com/in/muhammed-sager-5765432b4/" target="_blank" title="LinkedIn">
                    <i class="bi bi-linkedin"></i>
                </a>
                <a href="https://github.com/MuhammedSager511?tab=repositories" target="_blank" title="GitHub">
                    <i class="bi bi-github"></i>
                </a>
            </div>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="mt-3">
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New</a>
                </div>
            }
           
        </div>
    }
</div>
